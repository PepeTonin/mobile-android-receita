        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif"
        android:text="Triture no processador, a ricota com o açúcar refinado o leite condensado e o açúcar de baunilha.\nMisture a esta massa a raspa da casca dos limões e os ovos.\nEncha com esta massa a forma preparada com a massa de biscoitos.\nLeve ao forno 165°C, por 15 a 20 minutos, ou até que o recheio esteja firme nas laterais e cremoso no centro. "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

